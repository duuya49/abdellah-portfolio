---
layout: layouts/base.njk
---

<header class="page-header">
    <div class="container">
        <h1 class="gradient-text">{{ title }}</h1>
        <p>{{ description }}</p>
    </div>
</header>

<article class="blog-details">
    <div class="container">
        <div class="technical-card">
            <div class="meta-info">{{ category }} • {{ date | postDate }}</div>
            {{ content | safe }}
        </div>
        
        <div class="hero-cta" style="margin-top: var(--spacing-lg);">
            <a href="/blog" class="btn btn-secondary">← Back to Blog</a>
        </div>
    </div>
</article>
